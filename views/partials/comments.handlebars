<div class="comments">
  {{#each this}}
  <section class="comment mb-1">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
          <div class="fw-bold">{{comment_text}}</div>
           {{user.username}} on {{format_date created_at}}
        </div>
      </li>
    </ul>
  </section>
  {{/each}}
</div>
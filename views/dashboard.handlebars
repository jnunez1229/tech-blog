

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <div>
        {{#each posts as |post|}}
        <div>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<div>
    <button><a href="/dashboard/addpost">+ New Post</a></button>
</div>


<form class="signup-form">
  <div class="mb-3">
    <label for="username-signup" class="form-label">username:</label>
    <input type="text" id="username-signup" class="form-control w-25"/>
  </div>
  <div class="mb-3">
    <label for="email-signup" class="form-label">email:</label>
    <input type="text" id="email-signup" class="form-control w-25"/>
  </div>
  <div class="mb-3">
    <label for="password-signup" class="form-label">password:</label>
    <input type="password" id="password-signup" class="form-control w-25"/>
  </div>
  <div>
    <button type="submit" class="btn btn-outline-dark">signup</button>
    <button class="btn btn-dark"><a href="/login">log in here!</a></button>
  </div>
</form>
<script src="/javascript/signup.js"></script>